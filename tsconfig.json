{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/hw03/*"]
    }
  },
  "include": ["src/", ".eslintrc.js", "webpack.config.js"],
  "exclude": ["node_modules", "csv", "build"]
}